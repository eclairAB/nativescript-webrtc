{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es5", "es6", "es2016", "es2015.collection", "es2015", "es2015.promise"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true
    },
    "include":[
        "**/*.ts",
        "!*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "typings"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "genDir": ".",
        "skipMetadataEmit": false,
        "skipTemplateCodegen": true,
        "debug": true
    }
}
